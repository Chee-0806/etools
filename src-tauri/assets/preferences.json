{
  "version": "1.0.0",
  "hotkey": "Cmd+Shift+K",
  "theme": "dark",
  "language": "zh-CN",
  "window": {
    "alwaysOnTop": true,
    "showInTaskbar": false,
    "skipTaskbar": true
  },
  "search": {
    "maxResults": 50,
    "debounceMs": 150,
    "fuzzyMatchThreshold": 0.4
  },
  "features": {
    "clipboardHistory": true,
    "fileSearch": false,
    "browserSearch": false,
    "quickActions": true,
    "autoLaunch": false
  },
  "clipboard": {
    "maxItems": 1000,
    "retentionDays": 30,
    "sensitiveRetentionMinutes": 2,
    "enableImageSupport": true
  },
  "fileIndex": {
    "indexedPaths": [],
    "excludedDirectories": [
      "node_modules",
      ".git",
      "target",
      "dist",
      "build",
      ".vscode",
      ".idea"
    ],
    "maxFileSizeMB": 10
  },
  "browser": {
    "enabled": false,
    "cacheExpiryMinutes": 5,
    "sources": ["chrome", "firefox", "safari", "edge"]
  },
  "plugins": {
    "enabledPlugins": [],
    "disabledPlugins": [],
    "permissions": {},
    "marketplaceUrl": "https://plugins.example.com/api",
    "autoUpdate": true,
    "updateIntervalHours": 24
  },
  "webSearch": {
    "defaultEngine": "google",
    "engines": {
      "google": {
        "name": "Google",
        "url": "https://www.google.com/search?q=",
        "trigger": "g:"
      },
      "bing": {
        "name": "Bing",
        "url": "https://www.bing.com/search?q=",
        "trigger": "b:"
      },
      "duckduckgo": {
        "name": "DuckDuckGo",
        "url": "https://duckduckgo.com/?q=",
        "trigger": "ddg:"
      },
      "baidu": {
        "name": "Baidu",
        "url": "https://www.baidu.com/s?wd=",
        "trigger": "bd:"
      }
    }
  },
  "advanced": {
    "debugMode": false,
    "performanceMonitoring": false,
    "startupOptimization": true
  }
}
