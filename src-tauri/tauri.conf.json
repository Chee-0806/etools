{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "etools",
  "version": "0.1.0",
  "identifier": "com.xuqi.etools",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "etools",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "signingIdentity": null,
      "entitlements": "entitlements.plist",
      "hardenedRuntime": false
    }
  }
}
